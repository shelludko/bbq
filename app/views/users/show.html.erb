<div class="text-center">
  <h1><%= @user.name %></h1>
  <div>&nbsp;</div>

  <%= image_tag user_avatar(@user), class: "img-fluid round" %>

  <% if @user == current_user %>
    <p class="buffer-top"><%= link_to 'Редактировать профиль',
                                      edit_user_path(@user), class: 'btn btn-primary' %></p>
    <p><%= link_to 'Создать событие', new_event_path, class: 'btn btn-success' %></p>
    <p><%= link_to 'Вернуться', root_path, class: 'btn btn-my' %></p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3>Организовал:</h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top">Пользователь пока не организовал ни одного события.</p>
      <% end %>
    </div>
  </div>
</div>
