<%= form_with(model: @user, local: true, multipart: true) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group">
    <%= f.label 'Имя:' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'E-mail:' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %> <%= link_to 'Вернуться', :back, class: 'btn btn-success' %>
  </div>
<% end %>
