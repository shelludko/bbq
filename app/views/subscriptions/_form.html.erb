<%= form_for [@event, subscription] do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: subscription}, class: "alert alert-danger", role: "alert" %>

  <% unless user_signed_in? %>
    <div class="form-group">
      <%= f.label 'Имя:' %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label 'E-mail:' %>
      <%= f.text_field :user_email, class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'Подписаться', class: 'btn btn-my' %>
  </div>
<% end %>
