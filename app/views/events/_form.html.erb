<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event}, class: "alert alert-danger", role: "alert" %>

  <div class="form-group">
    <%= f.label 'Название события:' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Адрес:' %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Время:' %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <%= f.label 'Описание:' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
    <%= link_to 'Вернуться', :back, class: 'btn btn-success' %>
  </div>
<% end %>
