<div class="event">
  <%= link_to 'На главную', root_path, class: 'btn btn-my' %>
  <div class="row pad">
    <div class="col-md-6 buffer-top">
      <%= content_tag 'div', '', class: 'event-background',
                      style: "background-image: url(#{asset_path('event.jpg')})" %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :long %></h3>
            <h3><small><%= link_to @event.address,
                                   "https://yandex.ru/maps/?text=#{@event.address}", target: "_blank", title: 'Посмотреть место на карте' %></small>
            </h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
            <div class="buffer-top buffer-bottom">
              <%= link_to 'Изменить', edit_event_path(@event),
                          class: 'btn btn-primary buffer-left' %>
              <%= button_to "Удалить",
                            event_path(@event), data: {confirm: "Вы уверены?"},
                            method: :delete, class: 'btn btn-danger btn-ml' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-3 my-top">
      <div class="text-center">
        <h4>Приглашение от:</h4>
        <p><%= render partial: 'users/user', object: @event.user %></p>
      </div>
    </div>
    <div class="col-md-3 my-top">
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 event-tools">
      <button id="subscribe-on" class="btn btn-my buffer-top icon-lg" title="Подписаться">&nbsp;<%= fa_icon('thumbs-up') %>&nbsp;</button>
      <button id="comment-on" class="btn btn-my buffer-top" title="Комментарии">&nbsp;<%= fa_icon('comments') %>&nbsp;</button>
      <button id="gallery-on" class="btn btn-my buffer-top" title="Фотогалерея">&nbsp;<%= fa_icon('photo') %>&nbsp;</button>
      <button id="map-on" class="btn btn-my buffer-top" title="Посмотреть на карте">&nbsp;<%= fa_icon('map') %>&nbsp;</button>
      <div id="subscribe" class="buffer-both">
        <h4>На событие подписались:</h4>
        <div class="buffer-both">
          <p>
            <%= render partial: 'subscriptions/subscription',
                       collection: @event.subscriptions.except(@new_subscription) %>
          </p>
        </div>
        <div>
          <% unless current_user_can_edit?(@event) || @event.subscribers.include?(current_user) %>
            <div>
              <%= render partial: 'subscriptions/form', locals: {
                  subscription: @new_subscription || @event.subscriptions.build
              } %>
            </div>
          <% end %>
        </div>
      </div>
      <div id="comments">
        <%= render partial: 'comments/form',
                   locals: {comment: @new_comment || @event.comments.build} %>

        <h3>Комментарии:</h3>
        <div class="buffer-both">
          <%= render partial: 'comments/comment',
                     collection: @event.comments.except(@new_comment) %>
        </div>
      </div>

      <div id="gallery">
        <div class="event-photos-gallery">
          <%= render partial: 'photos/photo', collection: @event.photos.except(@new_photo) %>
        </div>

        <div class="event-photo-form">
          <%= render partial: 'photos/form', locals: {photo: @new_photo || @event.photos.build} %>
        </div>
      </div>

      <div class="container buffer-both">
        <div class="row">
          <div id="map">
            <iframe class="my-map" src="https://yandex.ua/map-widget/v1/?um=constructor%3A1f1afa66648866f701cc2842607ae8124ed20e95aff59eca71a0ae9fef3691de&amp;
        source=constructor" width="570" height="400" frameborder="0"></iframe>
          </div>
        </div>
      </div>

    </div>


    <div class="col-md-3"></div>
    <div class="col-md-3">
    </div>

  </div>
</div>

