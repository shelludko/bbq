<h1>Забыли пароль?</h1>
<div>&nbsp;</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource, class: "alert alert-danger", role: "alert" %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Сбросить пароль", class: 'btn btn-my' %>
        </div>
        <div>&nbsp;</div>
      <% end %>
    </div>
  </div>
</div>



