<%- if controller_name != 'sessions' %>
  <%= link_to "Войти", new_session_path(resource_name), class: 'btn btn-info' %>
  <div>&nbsp;</div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Регистрация", new_registration_path(resource_name), class: 'btn btn-success' %>
  <div>&nbsp;</div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Забыли пароль?", new_password_path(resource_name), class: 'btn btn-default' %>
  <div>&nbsp;</div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Не получили подтверждение инструкции?", new_confirmation_path(resource_name), class: 'btn btn-info' %>
  <div>&nbsp;</div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Не получили инструкции по разблокировке?", new_unlock_path(resource_name), class: 'btn btn-info' %>
  <div>&nbsp;</div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Войти в систему как #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %>
    <div>&nbsp;</div>
  <% end %>
<% end %>
